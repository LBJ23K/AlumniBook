<div class="ui page grid">
  <div class="column">
    <div class="ui teal segment">

    <form action="" class="ui form">
    <div class="field">
    	<label><%= __('Title') %></label>
    	<input type="text" ng-model="title">
    </div>
    
    <div class="field">
    	<label><%= __('Content') %></label>
    	<textarea type="text" ng-model="content" rows="10"></textarea>
    </div>
    <select name="" id="" ng-model="cat_id"><option value="{{cat.postCategory_id}}" ng-repeat="cat in category">{{cat.category_name}}</option></select><br>
    <button class="ui button" ng-click="submitPost()"><%= __('Submit') %></button>
    </form>

    </div>
  </div>
</div>