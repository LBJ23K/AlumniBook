<style >
.btn_head{
	position: absolute;
	right:20%;
	top:30%;
}
.btn_head2{
	position: absolute;
	right:10%;
	top:30%;
}
</style>
<div class="container" ng-init="init()">
    <div class="row">
        <div class="col-md-3" >
            <img ng-hide="post.Member.photo" src="http://faberbooks.net/plus/wp-content/uploads/sites/15/2013/12/person_placeholder_large.3cab151d9843-300x400.gif" class="img-responsive" alt="Responsive image">
            <img ng-show="post.Member.photo" ng-src="{{user.photo}}" class="img-responsive" alt="Responsive image">
            <div class="form-group" style="text-align:center">
                <h3>{{user.name}}</h3>
            </div>
            <div class="form-group">
            	<p>性別：{{user.gender}}</p>
            </div>
        </div>
        <div class="col-md-9">
            <div class="panel panel-primary">
