<div class="container">
    <div class="col-md-3"></div>
    <div class="col-md-5">
    <form action="">
        <span>帳號<input class="form-control" type="text" ng-model="account"></span>

        <span>密碼<input class="form-control" type="password" ng-model="password"></span>

        <span>姓名<input class="form-control" type="text" ng-model="name"></span>

        <span>性別</span><select class="form-control" ng-model="gender">
        					<option value="男">男</option>
        					<option value="女">女</option>
        				</select>

        <span>學校<input class="form-control" type="text" ng-model="school"></span>

        <span>科系<input class="form-control" type="text" ng-model="department"></span>

        <span>年級</span><select class="form-control" ng-model="grade">
        					<option value="大一">大一</option>
        					<option value="大二">大二</option>
        					<option value="大三">大三</option>
        					<option value="大四">大四</option>
        					<option value="碩一">碩一</option>
        					<option value="碩二">碩二</option>
        					<option value="博班">博班</option>
        					<option value="畢業">畢業</option>
        				</select>
                        <br>
        <button class="btn btn-primary" ng-click="upload()" >上傳相片</button>
		<!-- <div class="col-md-2" style="margin-top:10px"> -->
		<img ng-show="photo"ng-src="{{photo}}" class="img-responsive" alt="Responsive image">
		<!-- </div> -->
        <button class="btn btn-success" ng-click="signup()">註冊</button>
    </form>
    </div>
</div>