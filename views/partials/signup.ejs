<div class="container">
    <div class="col-md-3"></div>
    <div class="col-md-5">
    <form action="">
        <span><%= __('Username') %><input class="form-control" type="text" ng-model="account"></span>

        <span><%= __('Password') %><input class="form-control" type="password" ng-model="password"></span>

        <span><%= __('Name') %><input class="form-control" type="text" ng-model="name"></span>

        <span><%= __('Gender') %></span><select class="form-control" ng-model="gender">
        					<option value="男"><%= __('Male') %></option>
        					<option value="女"><%= __('Female') %></option>
        				</select>

        <span><%= __('School') %><input class="form-control" type="text" ng-model="school"></span>

        <span><%= __('Department') %><input class="form-control" type="text" ng-model="department"></span>

        <span><%= __('Grade') %></span><select class="form-control" ng-model="grade">
        					<option value="大一"><%= __('Freshman') %></option>
        					<option value="大二"><%= __('Sophomore') %></option>
        					<option value="大三"><%= __('Junior') %></option>
        					<option value="大四"><%= __('Senior') %></option>
        					<option value="碩一"><%= __('1st-master') %></option>
        					<option value="碩二"><%= __('2nd-master') %></option>
        					<option value="博班"><%= __('PhD') %></option>
        					<option value="畢業"><%= __('Graduated') %></option>
        				</select>
                        <br>
        <button class="btn btn-primary" ng-click="upload()" ><%=__('Upload Photo')%></button>
		<!-- <div class="col-md-2" style="margin-top:10px"> -->
		<img ng-show="photo"ng-src="{{photo}}" class="img-responsive" alt="Responsive image">
		<!-- </div> -->
        <button class="btn btn-success" ng-click="signup()"><%= __('Signup') %></button>
    </form>
    </div>
</div>