<div class="container" >

	<div class="row">
		<div class="col-md-2" style="margin-top:20px">
			<img ng-hide="post.Member.photo" src="http://faberbooks.net/plus/wp-content/uploads/sites/15/2013/12/person_placeholder_large.3cab151d9843-300x400.gif" class="img-responsive" alt="Responsive image">
			<img ng-show="post.Member.photo" ng-src="{{post.Member.photo}}" class="img-responsive" alt="Responsive image">
		</div>
		<div class="col-md-10">
		   	<div class="panel panel-primary">

				<div class="panel-heading">
					<h4>主題：<span ng-bind="post.title"></span><span class="pull-right"ng-bind="time(post.createdAt)"></span></h4>
					<h5 style="margin-left:10px">發文者：<span ng-bind="post.Member.name"></span></h5>	
					<h5 style="margin-left:10px">身份：<span ng-bind="post.Member.school"></span><span ng-bind="post.Member.department"></span><span ng-bind="post.Member.grade"></span></h5>	
					<button ng-show="isAuthor" class="btn btn-danger pull-right" ng-click="deleteIssue()">刪除文章</button>	
					
				</div>

				<div class="panel-body" style="min-height:300px">
					<p ng-bind="post.content"></p>
				    
				</div>

		   	</div>
		   	<button ng-show="likeThis"class="btn btn-default pull-right" ng-click="dislikePost()">不喜歡<span ng-bind="like"></span></button>
		   	<button ng-hide="likeThis" class="btn btn-default pull-right" ng-click="likePost()">喜歡<span ng-bind="like"></span></button>
	   	</div>
	</div>	
	<div class="row">
		<div ng-repeat="comment in comments">
			
			<div class="col-md-2" style="margin-top:40px">
				<img ng-hide="comment.Member.photo" src="http://faberbooks.net/plus/wp-content/uploads/sites/15/2013/12/person_placeholder_large.3cab151d9843-300x400.gif" class="img-responsive" alt="Responsive image">
				<img ng-show="comment.Member.photo" ng-src="{{comment.Member.photo}}" class="img-responsive" alt="Responsive image">
			</div>
			<div class="col-md-10">
			   	<div class="panel panel-success">
					<div class="panel-heading"><span ng-bind="comment.Member.name"></span> commented on <span ng-bind="time(comment.createdAt)"></span></div>
					<div class="panel-body" style="min-height:200px" ng-bind="comment.content">
			   		</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-2" style="margin-top:10px">
		<img ng-hide="$root.user.photo" src="http://faberbooks.net/plus/wp-content/uploads/sites/15/2013/12/person_placeholder_large.3cab151d9843-300x400.gif" class="img-responsive" alt="Responsive image">
		<img ng-show="$root.user.photo" ng-src="{{$root.user.photo}}" class="img-responsive" alt="Responsive image">
	</div>
	<div class="col-md-10">
		<h4>我要留言</h4>
		<form action="">
			<textarea class="form-control" name="" id="" rows="10" ng-model="myComment"></textarea><br>
			<h4 ng-hide="$root.isLogin" class="pull-right">請先<a href="/login"><button class="btn btn-danger">登入</button></a>再進行留言</h4>
			<button ng-show="$root.isLogin"class="btn btn-success pull-right" ng-click="submitComment()">送出</button>
		</form>
		<div style="height:100px"></div>
	</div>
		

</div>